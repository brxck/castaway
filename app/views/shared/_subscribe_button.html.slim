- subscribed
- podcast

.control
  - if user_signed_in?
    div(data-controller="sub")
      div(class=(subscribed ? "" : "hidden") data-target="sub.unsubscribe")
        = link_to mdi_tag("minus 24px") + "Unsubscribe",
                  subscription_path(subscription: { itunes_id: podcast.itunes_id }),
                  method: :delete,
                  remote: true,
                  class: "button is-info is-outlined"

      div(class=(subscribed ? "hidden" : "") data-target="sub.subscribe")
        = link_to mdi_tag("plus 24px") + "Subscribe",
                  subscriptions_path(subscription: { itunes_id: podcast.itunes_id,
                                                    name: podcast.name,
                                                    feed: podcast.feed }),
                  method: :post,
                  remote: true,
                  class: "button is-info"
  - else
      = link_to mdi_tag("plus 24px") + "Subscribe", subscriptions_path,
                class: "button is-info"
